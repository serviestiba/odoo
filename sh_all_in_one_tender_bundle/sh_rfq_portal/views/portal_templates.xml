<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="rfq_custom_assets_backend" name="RFQ Custom Assets" inherit_id="portal.assets_frontend">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/sh_all_in_one_tender_bundle/sh_rfq_portal/static/src/js/custom.js"></script>
        </xpath>
    </template>
    <template id="sh_portal_my_home_menu_rfq" name="Portal layout : rfq menu entries" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'quotes' or quotes" t-attf-class="breadcrumb-item #{'active ' if not quotes else ''}">
                <a t-if="quotes" t-attf-href="/my/rfq?{{ keep_query() }}">Request For Quotation</a>
                <t t-else="">Request For Quotation</t>
            </li>
            <li t-if="quotes" class="breadcrumb-item active">
                <span t-field="quotes.name" />
            </li>
        </xpath>
    </template>
    <template id="sh_portal_my_home_rfq" name="Portal My Home : rfq entry" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="rfq_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Request For Quotation</t>
                <t t-set="url" t-value="'/my/rfq'" />
                <t t-set="count" t-value="rfq_count" />
            </t>
        </xpath>
    </template>

    <template id="sh_portal_my_rfqs" name="Portal: My RFQ's">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Request For Quotation</t>
            </t>
            <t t-if="rfqs" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Request For Quotation #</th>
                        <th>Order Date</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="rfqs" t-as="order">
                        <tr>
                            <td>
                                <t t-if="order.sh_allow_portal_access">
                                    <a t-att-href="order.get_portal_url()"><t t-esc="order.name" /></a>
                                </t>
                                <t t-else="">
                                    <a t-attf-href="/my/rfq/#{order.id}?#{keep_query()}"><t t-esc="order.name" /></a>
                                </t>
                            </td>
                            <td><span t-field="order.date_order" /></td>
                            <td><span t-field="order.amount_total" t-options='{"widget": "monetary", "display_currency": order.currency_id}' /></td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>
    <template id="portal_rfq_form_template" name="RFQ Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'" />
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                    	<div style="width: 100%;">
										       <span style="display: inline-flex;align-items: center;width: 100%;max-width: 100%;justify-content: space-between;">
										       <span style="font-weight: 600;">
										           Download
										           </span>
										           <a class="btn btn-secondary o_download_btn" title="Download pdf" t-att-href="quotes.get_portal_url(report_type='pdf', download=True)"><i class="fa fa-print"></i></a>
										           <a class="btn btn-secondary o_download_btn" title="Download xls" t-att-href="quotes.get_portal_url(report_type='sh_rfq_portal_xls', download=True)"><i class="fa fa-file-excel-o "></i></a>
										    	</span>
										</div>
                                    </div>
                                </div>
                            </li>

                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav"></ul>
                            </li>
                            <li class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Responsible</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="quotes.create_uid.image_1024" t-att-src="image_data_uri(quotes.create_uid.image_1024)" alt="Contact" />
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="not quotes.create_uid.image_1024" src="/web/static/src/img/placeholder.png" alt="Contact" />
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px;">
                                        <span t-field="quotes.create_uid" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}' />
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="rfq_content" class="col-12 col-lg justify-content-end">
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="sh_all_in_one_tender_bundle.rfq_portal_content" />
                    </div>
                    <div id="rfq_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="quotes" />
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <template id="rfq_portal_content" name="Tender Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
            <h2 class="my-0">
                <em t-esc="quotes.name" />
            </h2>
            <div class="modal cancel_bid" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Bid Cancel/New Confirmation</h5>
                        </div>
                        <div class="modal-body">
                            <p>Are you want to sure to cancel old bid and create new ?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary btn_cancel_bid_new_modal">Yes</button>
                            <button type="button" class="btn btn-outline-dark" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
            <t t-if="quotes.sh_bid_updated">
                <div class="row">
                    <div class="col-6">
                    </div>
                    <div class="col-6" id="cancel_rfq_div">
                        <button id="btn_cancel_new_bid" style="float: right;" class="btn btn-secondary" title="Cancel RFQ/Create New">Cancel RFQ/Create New</button>
                    </div>
                </div>
            </t>
        </div>

        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations">
                <div class="row">
                    <div class="mb-3 col-6"><strong>Date:</strong> <span t-field="quotes.date_order" t-options='{"widget": "date"}' /></div>
                </div>
            </div>
            <section id="details" style="page-break-inside: auto;" class="mt32">
                <div class="container">
                    <div>
	                    <form action="/rfq/update" method="post">
	                        <input type="hidden" name="order_id" t-att-value="quotes.id" id="order_id" />
	                        <div class="row mb-5">
				            	<div class="col-3" style="display: flex; align-items: center;">
				                    <label for="currency_id" style="margin-bottom: 0px;"><b>Currency</b></label>
				                </div>
				                <div class="col-3" style="mergin: 0; padding: 0;" id="currency_div">
                                    <t t-if="quotes.sh_bid_updated or quotes.state in ['purchase','done','cancel']">
                                        <span t-field="quotes.currency_id"/>
                                    </t>
                                    <t t-else="">
                                        <select class="form-control currency" id="currency_id" name="currency_id">
                                                <option value="currency" selected="True">--Select Currency--</option>
                                                <t t-foreach="request.env['res.currency'].sudo().search([('active','=',True)])" t-as="c">
                                                    <t t-if="request.env.user.partner_id.property_purchase_currency_id and c.id == request.env.user.partner_id.property_purchase_currency_id.id">
                                                        <option t-att-value="c.id" t-att-selected="True"><t t-esc="c.name" /></option>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-if="quotes.currency_id and quotes.currency_id.id == c.id">
                                                            <option t-att-value="c.id" t-att-selected="True"><t t-esc="c.name" /></option>
                                                        </t>
                                                        <t t-else="">
                                                            <option t-att-value="c.id"><t t-esc="c.name" /></option>
                                                        </t>
                                                    </t>
                                                </t>
                                            </select>
                                        
                                    </t>
				                </div>
				            </div>
				            <h3 id="details">Products</h3>
				            <div class="row">
		                        <div class="col-lg-4" id="product_name_lbl">
		                            <strong>Product</strong>
		                        </div>
		                        <div class="col-lg-2" id="unit_price_lbl">
		                            <strong>Unit Price</strong>
		                        </div>
		                        <div class="col-lg-2">
					                <strong>Note/Comment</strong>
					            </div>
		                        <div class="col-lg-2 text-right" id="qty_lbl">
		                            <strong>Quantity</strong>
		                        </div>
		                        <div class="col-lg-2 text-right" id="subtotal_lbl">
		                            <strong>Subtotal</strong>
		                        </div>
		                    </div>
	                        <t t-foreach="quotes.order_line" t-as="ol">
	                            <div class="row purchases_vertical_align">
	                                <div class="col-lg-1 text-center">
	                                    <img t-if="ol.product_id.image_128" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(ol.product_id.image_128)" alt="Product" />
	                                    <img t-if="not ol.product_id.image_128" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/placeholder.png" alt="Product" />
	                                </div>
	                                <div id="product_name" class="col-lg-3">
	                                    <span t-field="ol.product_id" />
	                                </div>
	                                <div class="col-lg-2" id="update_product_qty">
                                        <t t-if="quotes.sh_bid_updated or quotes.state in ['purchase','done','cancel']">
                                            <span t-field="ol.price_unit"/>
                                        </t>
                                        <t t-else="">
                                            <input type="text" pattern="[0-9]+([\.,][0-9]+)?" class="form-control quantity" id="unit_price" t-att-name="ol.id" t-att-value="str(ol.price_unit)"/>
                                            <!-- <t t-if="quotes.partner_id.id == request.env.user.partner_id.id">
                                                <input type="text" pattern="[0-9]+([\.,][0-9]+)?" class="form-control quantity" id="unit_price" t-att-name="ol.id" t-att-value="str(ol.price_unit)"/>
                                            </t>
                                            <t t-else="">
                                                <span t-field="ol.price_unit"/>
                                            </t> -->
                                        </t>
	                                </div>
	                                <div class="col-lg-2" id="update_note">
                                        <t t-if="quotes.sh_bid_updated or quotes.state in ['purchase','done','cancel']">
                                            <span t-field="ol.sh_tender_note"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set="tender_note" t-value=""/>
                                                <t t-if="ol.sh_tender_note">
                                                    <t t-set="tender_note" t-value="str(ol.sh_tender_note)"/>		
                                                </t>
                                                <input type="text" class="form-control note" id="note" t-attf-name="#{ol.id}_note" t-att-value="tender_note" />
                                            <!-- <t t-if="quotes.partner_id.id == request.env.user.partner_id.id">
                                                <t t-set="tender_note" t-value=""/>
                                                <t t-if="ol.sh_tender_note">
                                                    <t t-set="tender_note" t-value="str(ol.sh_tender_note)"/>		
                                                </t>
                                                <input type="text" class="form-control note" id="note" t-attf-name="#{ol.id}_note" t-att-value="tender_note" />
                                            </t>
                                            <t t-else="">
                                                <span t-field="ol.sh_tender_note"/>
                                            </t> -->
                                        </t>
					                </div>
	                                <div class="col-lg-2 text-right">
	                                    <span t-esc="ol.product_qty" />
	                                </div>
	                                <div class="col-lg-2 text-right">
	                                    <span t-field="ol.price_subtotal" t-options='{"widget": "monetary", "display_currency": quotes.currency_id}' />
	                                </div>
	                            </div>
	                        </t>
	                       	<div class="row">
					             <div class="col-12">
					             	<label for="rfq_note" style="margin-top: 10px;">Supplier Note/Comment</label>
                                    <t t-if="quotes.sh_bid_updated or quotes.state in ['purchase','done','cancel']">
                                        <span t-field="quotes.sh_supplier_note"/>
                                    </t>
                                    <t t-else="">
                                        <input type="text" name="rfq_note" class="form-control" id="rfq_note" style="width:100%;margin-bottom:20px;" placeholder="Supplier Note/Comment......" t-att-value="quotes.sh_supplier_note"/>
                                        <!-- <t t-if="quotes.partner_id.id == request.env.user.partner_id.id">
                                            <input type="text" name="rfq_note" class="form-control" id="rfq_note" style="width:100%;margin-bottom:20px;" placeholder="Supplier Note/Comment......" t-att-value="quotes.sh_supplier_note"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="quotes.sh_supplier_note"/>
                                        </t> -->
                                    </t>
					             </div>
				         	</div>
                            <t t-if="not quotes.sh_bid_updated and quotes.state not in ['purchase','done','cancel']">
                                <button type="submit" id="btn_update_bid" class="btn btn-secondary" title="Update Bid">Update Bid</button>
                            </t>
                            <!-- <t t-if="quotes.partner_id.id == request.env.user.partner_id.id and not quotes.sh_bid_updated and quotes.state not in ['purchase','done','cancel']">
                                <button type="submit" id="btn_update_bid" class="btn btn-secondary" title="Update Bid">Update Bid</button>
                            </t> -->
	                    </form>
	                </div>
	                <t t-if="quotes.notes">
                    	<hr />
	                	<div class="row mb-5 mt-5">
		                	<div class="col-12">
		                		<strong>Terms &amp; Conditions</strong>
		                	</div>
		                	<div class="col-12">
		                		<span t-field="quotes.notes"/>
		                	</div>
		                </div>
		                <hr/>
	                </t>
                    <div class="row" id="amount_div">
                        <div class="col-lg-12 text-right">
                            <div class="row">
                                <div class="col-lg-10 text-right">
                                    Untaxed Amount:
                                </div>
                                <div class="col-lg-2 text-right">
                                    <span t-field="quotes.amount_untaxed" t-options='{"widget": "monetary", "display_currency": quotes.currency_id}' />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-10 text-right">
                                    Taxes:
                                </div>
                                <div class="col-lg-2 text-right">
                                    <span t-field="quotes.amount_tax" t-options='{"widget": "monetary", "display_currency": quotes.currency_id}' />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-10 text-right">
                                    <strong>Total:</strong>
                                </div>
                                <div class="col-lg-2 text-right">
                                    <strong><span t-field="quotes.amount_total" t-options='{"widget": "monetary", "display_currency": quotes.currency_id}' /></strong>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </section>
        </div>
    </template>

