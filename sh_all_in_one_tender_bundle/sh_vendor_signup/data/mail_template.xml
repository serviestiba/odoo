<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <!-- Company to Responsible Person-->
    <record id="sh_vendor_signup_email_notification" model="mail.template">
        <field name="name">Notification for responsible person</field>
        <field name="model_id" ref="sh_all_in_one_tender_bundle.model_res_partner" />
        <field name="use_default_to" eval="True" />
        <field name="lang">${object.env.context.get("lang")}</field>
        <field name="subject">New Vendor Signup</field>
        <field name="body_html" type="html">
            <div style="line-height: 28px;">
                Hello There,<br />
				New Vendor <b>${object.name}</b> is just sign-up,<br />
				You may take follow-up with him.<br />
				<a class="btn btn-primary" role="button" href="${object.env.context.get('customer_url')}">View Details</a><br />
				Thank You...<br />
				
            </div>
            
        </field>
    </record>
</odoo>