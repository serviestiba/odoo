<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Report Wizard view for xls-->
    <record id="purchase_agreement_xls_report_view_form" model="ir.ui.view">
        <field name="name">purchase.agreement.xls.report.view.form</field>
        <field name="model">purchase.agreement.xls.report</field>
        <field name="arch" type="xml">
            <form string="Purchase Agreement report">
                <sheet>
                    <group>
                        <group>
                            <field name="parent_record" invisible="1" />
                            <field name="report_select" widget="radio" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="get_xls_reports" class="btn btn-primary" type="object" string="Export" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
