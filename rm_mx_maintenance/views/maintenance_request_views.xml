<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View maintenance.request form -->
    <record id="view_maintenance_request_form_inherit" model="ir.ui.view">
        <field name="name">view.maintenance.request_form.inherit.view.form.hr</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="name" string="Movimientos de Stock">
                        <button name="open_stock_picking_form" string="Crear Stock Picking" type="object" class="oe_highlight" style="margin-left: 20px;"/>
                        <br/>
                        <br/>
                        <field name="stock_picking_id" widget="one2many_list">
                            <tree edit="true" create="false"> 
                                <field name="company_id" invisible="1" />
                                <field name="name"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="partner_id"/>
                                <field name="scheduled_date"/>
                                <field name="date_deadline"/>
                                <field name="origin"/>
                                <field name="picking_type_id"/>
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>


    <record id="inherit_view_id_inherit_stock_vpicktree" model="ir.ui.view">
        <field name="name">vpicktree inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='operations']//field[@name='location_id']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//page[@name='operations']//field[@name='location_dest_id']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
        </field>
    </record>

</odoo>
